<Window x:Class="Экзамен.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Экзамен"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Background="#FFA40000">
        <DataGrid x:Name="T_Emp" AutoGenerateColumns="False" HorizontalAlignment="Left" Height="266" Margin="134,80,0,0" VerticalAlignment="Top" Width="493"  Foreground="Black" OpacityMask="#FF948787" Background="#FF96DCD6" >

            <DataGrid.Columns  >
                <DataGridTextColumn Binding="{Binding LastName}" Header="Фамилия" Width="*" >

                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding First_Name}" Header="Имя" Width="*" >

                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Middle_Name}" Header="Отчество" Width="*" >

                </DataGridTextColumn>
            </DataGrid.Columns>

        </DataGrid>

    </Grid>
</Window>
